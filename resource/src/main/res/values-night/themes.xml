<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Molluk" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_gray</item>
        <item name="colorPrimaryVariant">@color/color_gray</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_background_default</item>
        <item name="colorSecondaryVariant">@color/color_background_tile</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnPrimaryContainer">@color/color_gray</item>

        <item name="colorControlHighlight">@color/color_gray</item>

        <item name="colorAccent">@color/color_gray</item>

        <item name="colorSurfaceVariant">@color/color_gray</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>

        <item name="android:ambientShadowAlpha">0.05</item>
        <item name="android:spotShadowAlpha">0.1</item>

        <item name="android:windowBackground">@color/color_background_default</item>
        <item name="android:autofilledHighlight" >@color/transparent</item>
    </style>
</resources>