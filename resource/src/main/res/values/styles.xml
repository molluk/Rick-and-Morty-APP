<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/BottomNavigationView.Indicator</item>
        <item name="itemTextAppearanceActive">@style/LabelMedium</item>
        <item name="itemTextAppearanceInactive">@style/LabelMedium</item>
        <item name="itemRippleColor">@color/color_gray_default</item>
        <item name="indicatorColor">@color/color_background_default</item>
        <item name="backgroundTint">@color/color_background_tile</item>
        <item name="background">@color/color_background_tile</item>
        <item name="elevation">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.BottomNavigationView" parent="">
        <item name="colorOnSurface">@color/icon_select</item>
        <item name="colorOnSurfaceVariant">@color/color_gray_default</item>
        <item name="colorOnSecondaryContainer">@color/icon_select</item>
    </style>

    <style name="BottomNavigationView.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/color_background_default</item>
    </style>


</resources>